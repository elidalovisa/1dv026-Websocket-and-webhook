<h1>
  <span class="far fa-edit"></span> Edit
</h1>

<form method="post" action="./{{viewData.id}}/update">
  <input type="hidden" name="id" value="{{viewData.id}}" />
  <div class="form-group">
    <input type="text" class="form-control" name="value" placeholder="Update task description here" value="{{viewData.value}}" value="{{snippet.username}}" required="required" autofocus="autofocus" />
  </div>
  <button type="submit" class="btn btn-lg btn-primary">Update Snippet</button>
</form>
