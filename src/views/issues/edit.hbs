<h1>
  <span class="far fa-edit"></span> Open Issue
</h1>

<form method="post" action="./{{viewData.id}}/open">
  <input type="hidden" name="id" value="{{viewData.id}}" />
  <div class="form-group">
    <td id="description"class="text-center text-primary">{{viewData.description}}</td>
  </div>
   <div class="form-group">
    <input type="checkbox" class="form-control" name="done" {{#if viewData.done }} checked="checked" {{/if}} />
  </div>
  <button type="submit" class="btn btn-lg btn-primary">Open Issue</button>
</form>

